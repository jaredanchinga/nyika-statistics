{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { 
      "source": "/", 
      "destination": "/coming-soon.html" 
    },
    { 
      "source": "/((?!coming-soon.html$|css/|js/|images/|favicon.ico$).*)", 
      "destination": "/coming-soon.html" 
    }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-developer-merchantid-domain-association",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}
